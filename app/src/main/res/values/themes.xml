<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Testino" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brandColor</item>
        <item name="colorPrimaryVariant">@color/brandColor</item>
        <item name="colorOnPrimary">@color/brandAccent  </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:statusBarColor">@color/white_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="BtnAccent">
        <item name="android:height">60dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:fadeEnabled">true</item>
        <item name="backgroundTint">@color/brandAccent</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="Btn">
        <item name="android:height">60dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:fadeEnabled">true</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="Theme.Testino.LoginActivity" parent="Theme.Testino">
        <item name="android:statusBarColor">@color/brandColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>